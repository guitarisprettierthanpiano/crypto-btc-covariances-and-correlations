{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": false,
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
